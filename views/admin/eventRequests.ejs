<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Pending Event Requests</title>
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      padding: 30px;
      background: #f8fafc;
      color: #1e293b;
    }

    h1 {
      color: #1e293b;
      margin-bottom: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background: white;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      border-radius: 8px;
      overflow: hidden;
    }

    th, td {
      padding: 14px 16px;
      border-bottom: 1px solid #e5e7eb;
      text-align: left;
    }

    th {
      background: #f1f5f9;
      font-weight: 600;
      color: #374151;
    }

    tr.event-row {
      cursor: pointer;
      transition: background 0.2s ease;
    }

    tr.event-row:hover {
      background: #f9fafb;
    }

    /* Details row */
    .event-details {
      display: none;
      background: #f8fafc;
      border-top: 1px solid #e5e7eb;
      animation: slideDown 0.3s ease forwards;
    }

    .details-frame {
      display: flex;
      align-items: flex-start;
      gap: 25px;
      padding: 25px;
      border: 2px solid #e2e8f0;
      border-radius: 10px;
      background: white;
      margin: 15px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    .details-text {
      flex: 2;
      line-height: 1.6;
    }

    .details-text p {
      margin: 8px 0;
    }

    .details-image {
      flex: 1;
      text-align: center;
    }

    .details-image img {
      width: 100%;
      max-width: 500px;
      border-radius: 8px;
      border: 2px solid #e5e7eb;
      transition: transform 0.3s ease;
    }

    .details-image img:hover {
      transform: scale(1.05);
    }

    button {
      padding: 7px 12px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: opacity 0.2s ease;
    }

    button:hover {
      opacity: 0.85;
    }

    .approve {
      background: #16a34a;
      color: white;
    }

    .reject {
      background: #dc2626;
      color: white;
    }

    form {
      display: inline-block;
      margin-right: 5px;
    }

    @keyframes slideDown {
      from { opacity: 0; transform: translateY(-5px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Modal (Improved Design) */

.modal {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.45);
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  z-index: 1000;
  backdrop-filter: blur(4px);
}

.modal.active {
  opacity: 1;
  pointer-events: auto;
}

.modal-dialog {
  background: white;
  border-radius: 14px;
  width: 90%;
  max-width: 520px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  animation: popIn 0.25s ease;
  overflow: hidden;
}

.modal-header {
  background: #2563eb;
  color: white;
  padding: 12px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-header h3 {
  margin: 0;
  font-size: 1.2rem;
}

.close-btn {
  background: none;
  border: none;
  color: white;
  font-size: 22px;
  cursor: pointer;
}

.modal-body {
  padding: 20px 50px;
}

/* ✅ FIX: Center everything properly inside the form */
.modal-body form {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 18px; /* space between textarea and buttons */
  width: 100%;
}

/* ✅ Make textarea perfectly centered and proportionate */
.modal-body textarea {
  width: 100%;
  max-width: 460px;
  padding: 14px 18px;
  border: 1.5px solid #cbd5e1;
  border-radius: 10px;
  resize: vertical;
  font-size: 15px;
  font-family: inherit;
  line-height: 1.5;
  background: #f9fafb;
  transition: all 0.2s ease;
}

.modal-body textarea:focus {
  border-color: #2563eb;
  outline: none;
  background: #fff;
  box-shadow: 0 0 0 3px rgba(37,99,235,0.15);
}

/* ✅ Center buttons horizontally */
.modal-actions {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  width: 100%;
}

/* Buttons styling */
button.cancel, button.submit {
  border: none;
  padding: 10px 20px;
  border-radius: 8px;
  cursor: pointer;
  font-size: 15px;
  font-weight: 500;
  transition: background 0.2s ease, transform 0.1s ease;
}

button.cancel {
  background: #e2e8f0;
  color: #1e293b;
}

button.submit {
  background: #2563eb;
  color: white;
}

button.cancel:hover {
  background: #cbd5e1;
  transform: translateY(-1px);
}

button.submit:hover {
  background: #1d4ed8;
  transform: translateY(-1px);
}

@keyframes popIn {
  from { transform: scale(0.95); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

  </style>
</head>
<body>
  <h1>Pending Event Requests</h1>
  <p>Welcome, <%= admin.name %> | <a href="/admin/logout">Logout</a></p>

  <% if (events.length === 0) { %>
    <p>No pending events right now.</p>
  <% } else { %>
    <table id="eventsTable">
      <thead>
        <tr>
          <th>Event Title</th>
          <th>Organizer</th>
          <th>Date</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% events.forEach(event => { %>
          <tr class="event-row" data-event-id="<%= event.id %>">
            <td><%= event.title %></td>
            <td><%= event.organizer_name || 'Unknown' %></td>
            <td><%= event.date %></td>
            <td><%= event.location %></td>
            <td>
              <form action="/admin/events/<%= event.id %>/approve" method="POST">
                <button class="approve">Approve</button>
              </form>
              <button class="reject" type="button" onclick="openRejectModal(<%= event.id %>)">Reject</button>
            </td>
          </tr>

          <tr class="event-details" id="details-<%= event.id %>">
            <td colspan="5">
              <div class="details-frame">
                <div class="details-text">
                  <p><strong>Description:</strong> <%= event.description %></p>
                  <p><strong>Organizer:</strong> <%= event.organizer_name %></p>
                  <p><strong>Email:</strong> <%= event.organizer_email %></p>
                  <p><strong>Date:</strong> <%= event.date %> at <%= event.time %></p>
                  <p><strong>Location:</strong> <%= event.location %></p>
                  <p><strong>Category:</strong> <%= event.category || 'N/A' %></p>

                  <% if (event.proof) { %>
                    <p><strong>Proof Document:</strong>
                      <a href="/uploads/proofs/<%= event.proof %>" target="_blank">View Proof</a>
                    </p>
                  <% } else { %>
                    <p><em>No proof uploaded</em></p>
                  <% } %>
                </div>

                <% if (event.image) { %>
                  <div class="details-image">
                    <img src="/uploads/banners/<%= event.image %>" alt="Event Banner">
                  </div>
                <% } %>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <!-- Rejection Reason Modal -->
  <!-- Rejection Reason Modal -->
<div id="rejectModal" class="modal">
  <div class="modal-dialog">
    <div class="modal-header">
      <h3>Reject Event</h3>
      <button class="close-btn" onclick="closeRejectModal()">&times;</button>
    </div>
    <div class="modal-body">
      <form id="rejectForm" method="POST">
        <label for="rejectReason"><strong>Reason for Rejection</strong></label>
        <textarea name="reason" id="rejectReason" rows="4" placeholder="Write a short explanation..." required></textarea>
        <div class="modal-actions">
          <button type="button" class="cancel" onclick="closeRejectModal()">Cancel</button>
          <button type="submit" class="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

    
        
          
        </form>
      </div>
    </div>
  </div>

  <script>
    // Toggle event details visibility
    document.querySelectorAll('.event-row').forEach(row => {
      row.addEventListener('click', () => {
        const id = row.dataset.eventId;
        const detailRow = document.getElementById(`details-${id}`);
        const isVisible = detailRow.style.display === 'table-row';
        document.querySelectorAll('.event-details').forEach(d => d.style.display = 'none');
        detailRow.style.display = isVisible ? 'none' : 'table-row';
      });
    });

    // Reject Modal logic
    const rejectModal = document.getElementById('rejectModal');
    const rejectForm = document.getElementById('rejectForm');
    const rejectReason = document.getElementById('rejectReason');

    function openRejectModal(eventId) {
      rejectModal.classList.add('active');
      rejectForm.action = `/admin/events/${eventId}/reject`;
    }

    function closeRejectModal() {
      rejectModal.classList.remove('active');
      rejectReason.value = '';
    }

    rejectModal.addEventListener('click', (e) => {
      if (e.target === rejectModal) closeRejectModal();
    });
  </script>
</body>
</html>
