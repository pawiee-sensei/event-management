<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <style>
    body { font-family: 'Segoe UI', sans-serif; background:#f8fafc; margin:0; padding:30px; color:#1e293b; }
    h1 { margin-bottom:5px; }
    .stats {
      display:grid;
      grid-template-columns: repeat(auto-fit,minmax(200px,1fr));
      gap:20px;
      margin:25px 0;
    }
    .card {
      background:white; padding:20px; border-radius:10px;
      box-shadow:0 2px 8px rgba(0,0,0,0.06); text-align:center;
      transition:transform .2s ease;
    }
    .card:hover { transform:translateY(-4px); }
    .count { font-size:28px; font-weight:bold; color:#2563eb; margin-top:10px; }
    table { width:100%; border-collapse:collapse; margin-top:30px; background:white;
            border-radius:10px; overflow:hidden; box-shadow:0 2px 8px rgba(0,0,0,0.06);}
    th,td { padding:12px 16px; border-bottom:1px solid #e5e7eb; text-align:left; }
    th { background:#f1f5f9; }
    tr:hover { background:#f9fafb; }
    a.btn { display:inline-block; padding:8px 14px; background:#2563eb; color:white;
            border-radius:6px; text-decoration:none; margin-top:10px; }
  </style>
</head>
<body>
  <h1>Welcome, <%= admin.name %></h1>
  <p>Role: <%= admin.role %></p>
  <a class="btn" href="/admin/events/pending">View Pending Events</a>

  <div class="stats">
    <div class="card"><h3>Total Events</h3><div class="count"><%= total %></div></div>
    <div class="card"><h3>Pending</h3><div class="count"><%= pending %></div></div>
    <div class="card"><h3>Approved</h3><div class="count"><%= approved %></div></div>
   
    <div class="card"><h3>Organizers</h3><div class="count"><%= organizers %></div></div>
  </div>

  <h2>Recent Events</h2>
  <table>
    <thead>
      <tr><th>Title</th><th>Organizer</th><th>Date</th><th>Status</th></tr>
    </thead>
    <tbody>
      <% if (recentEvents.length === 0) { %>
        <tr><td colspan="4">No recent events</td></tr>
      <% } else { %>
        <% recentEvents.forEach(ev => { %>
          <tr>
            <td><%= ev.title %></td>
            <td><%= ev.organizer || 'Unknown' %></td>
            <td><%= ev.date %></td>
            <td><%= ev.status.charAt(0).toUpperCase() + ev.status.slice(1) %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</body>
</html>
