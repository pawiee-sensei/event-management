<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Organizer Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: #f1f5f9;
      color: #1e293b;
      margin: 0;
      padding: 25px;
    }

    /* Header */
    .top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #2563eb;
      color: white;
      padding: 18px 25px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .top h1 {
      margin: 0;
      font-size: 22px;
    }

    a.btn {
      background: white;
      color: #2563eb;
      padding: 8px 14px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      transition: background 0.2s ease;
    }

    a.btn:hover {
      background: #e0e7ff;
    }

    /* Main Layout */
    main {
      margin-top: 25px;
      background: #fff;
      border-radius: 10px;
      padding: 25px 30px 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    /* Stats Section */
    .stats {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 12px;
      margin-bottom: 15px;
    }

    .stat-box {
      background: #f8fafc;
      flex: 1 1 200px;
      padding: 14px;
      border-radius: 10px;
      text-align: center;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .stat-box h2 {
      margin: 5px 0;
      color: #2563eb;
      font-size: 21px;
    }

    .stat-box p {
      margin: 0;
      color: #475569;
      font-size: 14px;
    }

    /* Tools Section */
    .tools {
      display: flex;
      justify-content: flex-start;
      gap: 15px;
      margin: 35px 0 35px;
      flex-wrap: wrap;
    }

    .tools a {
      background: #2563eb;
      color: white;
      padding: 9px 16px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 500;
      transition: background 0.2s ease;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    .tools a:hover {
      background: #1d4ed8;
    }

    /* Charts Section */
    .charts {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 80px;
      padding: 10px 0 10px;
      margin-top: -20px;
    }

    .chart-box {
      background: #f9fafb;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      width: 100%;
      max-width: 480px;
    }

    h3 {
      text-align: center;
      color: #1e293b;
      margin-bottom: 10px;
      font-size: 16px;
      border-bottom: 2px solid #2563eb;
      display: inline-block;
      padding-bottom: 4px;
    }

    canvas {
      display: block;
      width: 100% !important;
      height: 270px !important;
      margin-top: 8px;
    }

    /* Responsive */
    @media (max-width: 900px) {
      .charts {
        flex-direction: column;
        align-items: center;
      }
      .chart-box {
        max-width: 100%;
      }
      .stats {
        flex-direction: column;
        align-items: center;
      }
    }
  </style>
</head>
<body>
  <div class="top">
    <h1>Welcome back, <%= organizer.name %> ðŸ‘‹</h1>
    <a href="/organizer/logout" class="btn">Logout</a>
  </div>

  <main>
    <p style="margin-top:0; margin-bottom:10px; font-size:15px;">
      <strong>Role:</strong> <%= organizer.role %>
    </p>

    <!-- Stats Summary -->
    <div class="stats">
      <div class="stat-box">
        <h2><%= stats.approved || 0 %></h2>
        <p>Approved</p>
      </div>
      <div class="stat-box">
        <h2><%= stats.pending || 0 %></h2>
        <p>Pending</p>
      </div>
      <div class="stat-box">
        <h2><%= stats.rejected || 0 %></h2>
        <p>Rejected</p>
      </div>
      <div class="stat-box">
        <h2><%= engagement || 0 %></h2>
        <p>Engagement</p>
      </div>
    </div>

    <!-- Tools -->
    <div class="tools">
      <a href="/organizer/events">ðŸ“‹ View My Events</a>
      <a href="/organizer/events/new">âž• Add New Event</a>
    </div>

    <!-- Charts -->
    <div class="charts">
      <div class="chart-box">
        <h3>ðŸ“… Monthly Event Summary</h3>
        <canvas id="eventsChart"></canvas>
      </div>

      <div class="chart-box">
        <h3>ðŸ’¬ Engagement per Event</h3>
        <canvas id="engagementChart"></canvas>
      </div>
    </div>
  </main>

  <script>
    const monthly = <%- JSON.stringify(monthly) %>;
    const engagementData = <%- JSON.stringify(eventEngagement) %>;

    // === Monthly Events Chart ===
    new Chart(document.getElementById('eventsChart'), {
      type: 'line',
      data: {
        labels: monthly.map(m => new Date(0, m.month - 1).toLocaleString('default', { month: 'short' })),
        datasets: [{
          label: 'Events Created',
          data: monthly.map(m => m.total),
          borderColor: '#2563eb',
          backgroundColor: 'rgba(37,99,235,0.15)',
          fill: true,
          tension: 0.35,
          pointRadius: 4,
          pointBackgroundColor: '#2563eb'
        }]
      },
      options: {
        responsive: true,
        plugins: { legend: { display: false } },
        scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } }
      }
    });

    // === Engagement per Event Chart (Clickable) ===
    const ctx = document.getElementById('engagementChart');
    const chart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: engagementData.map(e => e.title),
        datasets: [{
          label: 'Comments',
          data: engagementData.map(e => e.comment_count),
          backgroundColor: 'rgba(37,99,235,0.6)',
          borderColor: '#2563eb',
          borderWidth: 1,
          borderRadius: 6
        }]
      },
      options: {
        responsive: true,
        scales: { y: { beginAtZero: true } },
        plugins: {
          legend: { display: false },
          tooltip: {
            callbacks: {
              label: (tooltipItem) =>
                `${tooltipItem.raw} comments on "${tooltipItem.label}"`
            }
          }
        },
        onClick: (evt, elements) => {
          if (elements.length > 0) {
            const index = elements[0].index;
            const selectedEvent = engagementData[index];
            if (selectedEvent && selectedEvent.id) {
              window.open(`/events/${selectedEvent.id}`, '_blank');
            }
          }
        }
      }
    });
  </script>
</body>
</html>
