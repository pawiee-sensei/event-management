<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Organizer Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: #f9fafb;
      color: #1e293b;
      padding: 40px;
    }
    .top {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }
    a.btn {
      background: #2563eb;
      color: #fff;
      padding: 10px 16px;
      border-radius: 6px;
      text-decoration: none;
    }
    a.btn:hover { background: #1d4ed8; }

    .stats {
      display: flex;
      gap: 20px;
      margin-bottom: 40px;
      flex-wrap: wrap;
    }
    .card {
      background: white;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      padding: 20px;
      flex: 1;
      min-width: 220px;
      text-align: center;
    }
    .card h3 {
      margin: 0;
      color: #64748b;
      font-size: 16px;
    }
    .card p {
      font-size: 28px;
      color: #2563eb;
      margin: 8px 0 0;
      font-weight: 600;
    }

    .chart-container {
      background: white;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      padding: 20px;
      max-width: 800px;
      margin: 0 auto;
    }

    canvas { width: 100% !important; height: 380px !important; }
  </style>
</head>
<body>
  <div class="top">
    <h1>Welcome, <%= organizer.name %>!</h1>
    <a href="/organizer/logout" class="btn">Logout</a>
  </div>

  <div class="stats">
    <div class="card">
      <h3>Approved Events</h3>
      <p><%= stats.approved || 0 %></p>
    </div>
    <div class="card">
      <h3>Pending Events</h3>
      <p><%= stats.pending || 0 %></p>
    </div>
    <div class="card">
      <h3>Rejected Events</h3>
      <p><%= stats.rejected || 0 %></p>
    </div>
    <div class="card">
      <h3>Total Engagement</h3>
      <p><%= engagement %></p>
    </div>
  </div>

  <div class="chart-container">
    <h2 style="text-align:center; margin-bottom:15px;">ðŸ’¬ Engagement per Event</h2>
    <canvas id="engagementChart"></canvas>
  </div>

  <div style="text-align:center; margin-top:30px;">
    <a class="btn" href="/organizer/events">View My Events</a>
  </div>

  <script>
    const engagementData = <%- JSON.stringify(eventEngagement) %>;

    const ctx = document.getElementById('engagementChart').getContext('2d');
    const titles = engagementData.map(e => e.title);
    const counts = engagementData.map(e => e.comment_count);

    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: titles,
        datasets: [{
          label: 'Comments per Event',
          data: counts,
          borderWidth: 1,
          backgroundColor: 'rgba(37, 99, 235, 0.6)',
          borderColor: '#2563eb'
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: { beginAtZero: true }
        },
        plugins: {
          legend: { display: false },
          tooltip: { backgroundColor: '#1e293b', titleColor: '#fff', bodyColor: '#fff' }
        }
      }
    });
  </script>
</body>
</html>
